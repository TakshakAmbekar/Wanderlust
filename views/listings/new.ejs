<% layout("/layouts/boilerplate") %>
<body>
  <br />
  <div class="row offset-2">
    <h2 class="mb-3">Create a new listing</h2>
    <div class="col-8">
      <form
        action="/listings"
        method="POST"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-4">
          <label for="title" class="form-label">Title</label>
          <input
            name="listing[title]"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a title</div>
          <div class="valid-feedback">Looks good</div>
        </div>
        <div class="mb-4">
          <label for="listing[description]" class="form-label"
            >Description</label
          >
          <textarea
            name="listing[description]"
            rows="4"
            cols="40"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Please enter a short description</div>
        </div>
        <div class="mb-4">
          <label for="listing[image][url]" class="form-label"
            >Upload image</label
          >
          <input name="listing[image][url]" type="file" class="form-control" required/>
        </div>
        <div class="row">
          <div class="mb-4 col-md-4">
            <label for="listing[price]" class="form-label">Price</label>
            <input
              name="listing[price]"
              type="number"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Enter a valid price</div>
          </div>
          <div class="mb-4 col-md-8">
            <label for="listing[location]" class="form-label">Location</label>
            <input
              name="listing[location]"
              type="text"
              class="form-control"
              required
            />
            <div class="mb-4 invalid-feedback">Enter a valid location</div>
          </div>
        </div>
        <div class="mb-4">
          <label for="listing[country]" class="form-label">Country</label>
          <input
            name="listing[country]"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter a valid country</div>
        </div>
        <button class="btn btn-danger mb-3">Add</button>
      </form>
    </div>
  </div>
</body>
