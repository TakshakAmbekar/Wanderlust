<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-10 col-sm-8 mx-auto">
      <h1 class="mt-3 mb-5 text-center">Log into your Account</h1>
      <form action="/login" method="POST" class="needs-validation" novalidate>
        <div class="row">
          <div class="mb-4 col-md-12 col-lg-6">
            <label for="username" class="form-label">username</label>
            <input
              name="username"
              id="username"
              type="text"
              class="form-control"
              required
            />
          </div>
          
          <div class="mb-4 col-md-12 col-lg-6">
            <label for="password" class="form-label">password</label>
            <input
              name="password"
              id="password"
              type="password"
              class="form-control"
              required
            />
          </div>
        </div>
        <div class="row">
          <button class="btn btn-dark col-8 col-md-4 mx-auto">Log-in</button>
        </div>
      </form>
    </div>
  </div>
  